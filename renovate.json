{
    "extends": [
        "local>wim-web/renovate-config"
    ],
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "regexManagers": [
        {
            "fileMatch": [
                "^Dockerfile$"
            ],
            "matchStrings": [
                "yarn.*add(\\s)*(?<depName>.*)@(?<currentValue>.*)"
            ],
            "datasourceTemplate": "npm"
        }
    ]
}
